<% layout("/layouts/boilerplate") -%>
<body>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add New Listing</h2>

    <form method="POST" action="/listings" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" id="title" class="form-control" placeholder="Add title" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input name="listing[description]" type="text" id="description" class="form-control" placeholder="Add description" required>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" type="file" id="image" class="form-control" required>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" type="number" id="price" class="form-control" placeholder="Add price" required>
        </div>

        <div class="col-md-8 mb-3">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" type="text" id="country" class="form-control" placeholder="Add country" required>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" type="text" id="location" class="form-control" placeholder="Add location" required>
      </div>

      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>

 
</body>
